<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="100dp"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/meal_name_view"
        app:layout_constraintTop_toBottomOf="@+id/meal_name_view">

        <ImageView
            android:id="@+id/meal_image"
            android:layout_width="95dp"
            android:layout_height="99dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/area_name_view"
            android:layout_width="154dp"
            android:layout_height="51dp"
            android:text="TextView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/category_name_view"
            android:layout_width="158dp"
            android:layout_height="51dp"
            android:layout_alignStart="@id/meal_image"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="-154dp"
            android:layout_marginBottom="3dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/meal_name_view"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_alignStart="@id/meal_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="97dp"
            android:layout_marginTop="0dp"
            android:text="TextView" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

